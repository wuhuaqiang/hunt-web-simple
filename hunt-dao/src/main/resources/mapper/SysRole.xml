<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hunt.dao.SysRoleMapper">
    <resultMap id="roleMap" type="com.hunt.model.entity.JSONEntity">
        <id column="roleId" property="roleId"/>
        <result column="roleName" property="roleName"/>
        <collection property="users" ofType="com.alibaba.fastjson.JSONObject">
            <id column="userId" property="userId"/>
            <result column="nickname" property="nickname"/>
        </collection>
        <collection property="menus" ofType="com.hunt.model.entity.JSONEntity">
            <id column="menuCode" property="menuCode"/>
            <result column="menuName" property="menuName"/>
            <collection property="permissions" ofType="com.alibaba.fastjson.JSONObject">
                <id column="permissionId" property="permissionId"/>
                <result column="permissionName" property="permissionName"/>
            </collection>
        </collection>
    </resultMap>
    <select id="listRole" resultMap="roleMap" parameterType="string">
        SELECT
            r.id roleId,
            r.name roleName,
            u.id userId,
            u.zh_name nickName,
            p.id permissionId,
            pg.id menuCode,
            pg.name menuName,
            p.name permissionName
        FROM
            sys_role r
          /*  LEFT JOIN sys_role_organization ro ON ro.sys_role_id = r.id*/
            LEFT JOIN sys_user_role ur ON ur.sys_role_id = r.id and ur.status = '1'
            LEFT JOIN sys_user u ON u.id = ur.sys_user_id
            LEFT JOIN sys_role_permission rp ON
                r.id = rp.sys_role_id and rp.status = '1'
            LEFT JOIN sys_permission p ON rp.sys_permission_id = p.id
            LEFT JOIN sys_permission_group pg ON p.sys_permission_group_id = pg.id
        WHERE  r.status = '1'
        <if test="roleName !=null and roleName.length() != 0">
            AND r.name like concat(concat('%',#{roleName}),'%')
        </if>
    </select>
    <resultMap id="baseResultMap" type="com.hunt.model.entity.SysRole">
        <result column="id" property="id" jdbcType="BIGINT"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="rank" property="rank" jdbcType="BIGINT"/>
        <result column="is_final" property="isFinal" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="create_by" property="createBy" jdbcType="BIGINT"/>
        <result column="update_by" property="updateBy" jdbcType="BIGINT"/>
        <result column="status" property="status" jdbcType="TINYINT"/>
    </resultMap>
    <!--  -->
    <sql id="sql_column">
        id,
        description,
        name,
        rank,
        isFinal,
        createTime,
        updateTime,
        createBy,
        updateBy,
        status
    </sql>

    <sql id="sql_column_where">
        <if test="id !=null ">
            AND id = #{id}
        </if>
        <if test="description !=null and description.length() != 0">
            AND description = #{description}
        </if>
        <if test="name !=null and name.length() != 0">
            AND name = #{name}
        </if>
        <if test="rank !=null ">
            AND rank = #{rank}
        </if>
        <if test="isFinal !=null ">
            AND is_final = #{isFinal}
        </if>
        <if test="createTime !=null ">
            AND create_time = #{createTime}
        </if>
        <if test="updateTime !=null ">
            AND update_time = #{updateTime}
        </if>
        <if test="createBy !=null ">
            AND create_by = #{createBy}
        </if>
        <if test="updateBy !=null ">
            AND update_by = #{updateBy}
        </if>
        <if test="status !=null ">
            AND status = #{status}
        </if>
    </sql>

    <insert id="insert" parameterType="SysRole" useGeneratedKeys="false" keyProperty="id">
        insert into sys_role
        <trim prefix="(" suffix=")" suffixOverrides=",">
            id,
            <if test="description !=null and description.length() !=0">
                description,
            </if>
            <if test="name !=null and name.length() !=0">
                name,
            </if>
            <if test="rank !=null">
                rank,
            </if>
            <if test="isFinal !=null">
                is_final,
            </if>
            <if test="createTime !=null">
                create_time,
            </if>
            <if test="updateTime !=null">
                update_time,
            </if>
            <if test="createBy !=null">
                create_by,
            </if>
            <if test="updateBy !=null">
                update_by,
            </if>
            <if test="status !=null">
                status,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            idauto.nextval,
            <if test="description !=null and description.length() !=0">
                #{description},
            </if>
            <if test="name !=null and name.length() !=0">
                #{name},
            </if>
            <if test="rank !=null">
                #{rank},
            </if>
            <if test="isFinal !=null">
                #{isFinal},
            </if>
            <if test="createTime !=null">
                #{createTime},
            </if>
            <if test="updateTime !=null">
                #{updateTime},
            </if>
            <if test="createBy !=null">
                #{createBy},
            </if>
            <if test="updateBy !=null">
                #{updateBy},
            </if>
            <if test="status !=null">
                #{status},
            </if>
        </trim>
    </insert>


    <update id="update" parameterType="SysRole">
        update sys_role
        <set>
            <if test="id !=null">
                id = #{id},
            </if>
            <if test="description !=null and description.length() !=0">
                description = #{description},
            </if>
            <if test="name !=null and name.length() !=0">
                name = #{name},
            </if>
            <if test="rank !=null">
                rank = #{rank},
            </if>
            <if test="isFinal !=null">
                is_final = #{isFinal},
            </if>
            <if test="createTime !=null">
                create_time = #{createTime},
            </if>
            <if test="updateTime !=null">
                update_time = #{updateTime},
            </if>
            <if test="createBy !=null">
                create_by = #{createBy},
            </if>
            <if test="updateBy !=null">
                update_by = #{updateBy},
            </if>
            <if test="status !=null">
                status = #{status},
            </if>
        </set>
        where id =#{id} and status=1
    </update>

    <select id="select" parameterType="SysRole" resultType="SysRole">
        select * from sys_role where
        <where>
            <include refid="sql_column_where"/>
        </where>
    </select>

    <select id="selectById" parameterType="integer" resultType="SysRole">
        SELECT *
        FROM sys_role
        WHERE id = #{id} AND status = 1
    </select>

    <select id="selectByUserId" parameterType="integer" resultType="SysRole">
        SELECT r.*
        FROM sys_role r
        JOIN sys_user_role ur ON r.id = ur.Sys_Role_Id and ur.status = 1
        WHERE ur.Sys_User_Id = #{userId} AND r.status = 1
    </select>

    <select id="selectAll" resultType="SysRole">
        SELECT *
        FROM sys_role
        WHERE status = 1
    </select>

    <select id="selectCounts" resultType="integer" parameterType="string">
        SELECT count(*)
        FROM sys_role
        WHERE status = 1
        <if test="roleName !=null and roleName.length() != 0">
            AND name like concat(concat('%',#{roleName}),'%')
        </if>
    </select>
    <select id="selectMaxId" resultType="integer">
        SELECT MAX(ID) FROM SYS_ROLE
    </select>
    <select id="isExsitName" resultType="java.lang.Boolean">
        SELECT  count(*)
        FROM sys_role
        WHERE status = 1 AND name = #{name}
    </select>
    <select id="isExsitNameExcludeId" resultType="java.lang.Boolean">
        SELECT count(*)
        FROM sys_role
        WHERE status = 1 AND id != #{id} AND name = #{name}
    </select>

</mapper>